generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model User {
  id            String          @id @default(cuid())
  name          String?
  email         String          @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
 
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  forms Form[]
  responses Response[]

  @@index([id])
}
 
model Account {
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
 
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
 
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
 
  @@id([provider, providerAccountId])
}
 
model Session {
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
 
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
 
model VerificationToken {
  identifier String
  token      String
  expires    DateTime
 
  @@id([identifier, token])
}
 

model Form {
  form_id     String    @id @default(cuid())
  title       String
  cover_image String?
  user_id     String
  created_at  DateTime  @default(now())
  user        User      @relation(fields: [user_id], references: [id], onDelete: Cascade)
  responses   Response[]
  fields      Field[]
  tags        FormTags[]
  settings    FormSettings?
  form        GoogleSheet?
  @@index([form_id])
}

model FormSettings {
  formsettings_id String @id @default(cuid())
  form_id String @unique
  form Form @relation(fields: [form_id], references: [form_id], onDelete: Cascade)
  response_limit Int?
  response_message String?
  stars Int?
  @@index([formsettings_id])
}

model FormTags {
  formtag_id String @id @default(cuid())
  form_id String
  form Form @relation(fields: [form_id], references: [form_id], onDelete: Cascade)
  tagname String
  @@index([formtag_id])
}

model Field {
  field_id        String      @id @default(cuid())
  form_id         String
  type            FieldType  //common
  title           String // common
  required        Boolean // common
  image           String? // type: image, text
  index           Int // common
  text_field_type TextFieldType? // type: text
  multi_select    Boolean? // type: option
  max_char        Int? // type: text_input
  options         Option[] // type: option
  field_responses FieldResponse[] 
  text_style      TextStyle? // type: text
  form            Form        @relation(fields: [form_id], references: [form_id], onDelete: Cascade)
  @@index([field_id])
}

model Option {
  option_id String @id @default(cuid())
  field_id  String
  field     Field  @relation(fields: [field_id], references: [field_id], onDelete: Cascade)
  value     String
  index    Int
  @@index([option_id])
}

model Response {
  response_id String @id @default(cuid())
  form_id     String
  user_id     String
  form        Form   @relation(fields: [form_id], references: [form_id], onDelete: Cascade)
  user        User   @relation(fields: [user_id], references: [id], onDelete: Cascade)
  fields      FieldResponse[]
  @@index([response_id])
}

model FieldResponse {
  field_response_id String @id @default(cuid())
  field_id          String
  response_id       String
  option_index      Int[]
  text              String?
  field             Field    @relation(fields: [field_id], references: [field_id], onDelete: Cascade)
  response          Response @relation(fields: [response_id], references: [response_id], onDelete: Cascade)
  @@index([field_response_id])
}

model TextStyle {
  text_id           String @id @default(cuid())
  field_id          String @unique
  bold              Boolean?
  italic            Boolean?
  underline         Boolean?
  size              FontSize
  field             Field    @relation(fields: [field_id], references: [field_id], onDelete: Cascade)
  @@index([text_id])
}

model GoogleSheet {
  id String @id @default(cuid())
  form_id  String @unique
  sheet_id String
  form     Form   @relation(fields: [form_id], references: [form_id], onDelete: Cascade)
  @@index([id])
}

enum FieldType {
  OPTION
  TEXT
  TEXT_IMAGE
  TEXT_INPUT
  IMAGE
}

enum TextFieldType {
  TEXTAREA
  TEXT
  EMAIL
  NUMBER
}

enum FontSize {
  XL
  LG
  MD
  SM
}

